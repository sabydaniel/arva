<odoo>
    <template id="ship_report_html_template">
        <t t-call="web.layout">
            <div class="container mt-4">
                <h3>Ship Report (HTML View)</h3>

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Shipment</th>
                            <th>Status</th>
                            <th>Created Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="shipments" t-as="ship">
                            <tr>
                                <td><t t-esc="ship.name"/></td>
                                <td><t t-esc="ship.state"/></td>
                                <td><t t-esc="ship.create_date"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <t t-if="not shipments">
                    <p>No records found.</p>
                </t>
            </div>
        </t>
    </template>
</odoo>
