<odoo>

    <record id="view_shipment_import_wizard" model="ir.ui.view">
        <field name="name">shipment.import.wizard.form</field>
        <field name="model">shipment.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Shipment">
                <group>
                    <field name="file" filename="file_name"/>
                </group>
                <footer>
                    <button name="action_import"
                            type="object"
                            string="Import"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_shipment_import_wizard" model="ir.actions.act_window">
        <field name="name">Shipment Import</field>
        <field name="res_model">shipment.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
