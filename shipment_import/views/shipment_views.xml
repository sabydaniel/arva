<odoo>

    <record id="view_shipment_tree" model="ir.ui.view">
        <field name="name">shipment.shipment.tree</field>
        <field name="model">shipment.shipment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="customer"/>
                <field name="shipment_date"/>
            </tree>
        </field>
    </record>

    <record id="view_shipment_form" model="ir.ui.view">
        <field name="name">shipment.shipment.form</field>
        <field name="model">shipment.shipment</field>
        <field name="arch" type="xml">
            <form string="Shipment">
                <sheet>
                    <notebook>

                        <page string="General">
                            <group>
                                <group>
                                    <field name="name"/>
                                    <field name="shipment_date"/>
                                    <field name="customer"/>
                                    <field name="sales_person"/>
                                </group>
                                <group>
                                    <field name="vessel"/>
                                    <field name="voyage_number"/>
                                    <field name="master_bill"/>
                                    <field name="house_bill"/>
                                </group>
                                <group>
                                    <field name="origin"/>
                                    <field name="destination"/>
                                </group>
                                <group>
                                    <field name="marks"/>
                                    <field name="description"/>
                                </group>
                            </group>
                        </page>

                        <page string="Charges">
                            <field name="charge_ids">
                                <tree editable="bottom">
                                    <field name="description"/>
                                    <field name="cost"/>
                                    <field name="sell"/>
                                </tree>
                            </field>
                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
