<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="cargo_receipt_template">
        <t t-call="web.basic_layout">
            <main>
                <style>
                    @page { size: A4; margin: 0; }
                    html, body { margin: 0; padding: 0; } .o_report_layout, .o_report_layout_standard, .article, main {
                    margin: 0 !important; padding: 0 !important; }
                    table { width: 100%; border-collapse: collapse; }
                    td, th { vertical-align: top; }table,tr, td { page-break-inside: avoid !important; }
                </style>

                <t t-foreach="docs[:1]" t-as="o">
                    <t t-set="company" t-value="o.company_id or env.company"/>

                    <div style="width:227mm;  min- height:297mm;padding:10mm; box-sizing:border-box;display:flex;flex-direction:column; justify-content:space-between; font-family:Arial, Helvetica, sans-serif;font-size:14px;line-height:1.10; ">

                        <table>
                            <tr>
                                <td style="width:50%; border:1px solid #000; padding:10px; height:20mm; vertical-align:top;">
                                    <strong>Shipper</strong>
                                </td>
                                <td rowspan="3"
                                    style="width:50%; padding:10px; vertical-align:top; position:relative;">
                                    <div style=" position:absolute; top:0; right:0;border:1px solid #000;padding:6px 10px;text-align:center;font-weight:bold;font-size:12px;min-width:160px; ">
                                        <div>Bill / Lading Number</div>
                                        <div>
                                            <t t-esc="o.name"/>
                                        </div>
                                    </div>
                                    <div style="display:flex; justify-content:space-between; align-items:flex-start;">

                                        <div style="width:65%;">
                                            <div style="font-size:20px; font-weight:bold;">
                                                BILL OF LADING
                                            </div>
                                            <div style="font-weight:bold;">
                                                ORIGINAL
                                            </div>
                                        </div>
                                    </div>

                                    <div style="text-align:center; margin-top:12px;">
                                        <t t-if="company.logo_web">
                                            <img t-att-src="'/web/image/res.company/%s/logo_web' % company.id"
                                                 style="max-height:70px; max-width:160px; margin-bottom:6px;"/>
                                        </t>

                                        <div style="font-size:15px; font-weight:bold;">
                                            <t t-esc="company.name"/>
                                        </div>

                                        <div style="font-size:12px;">
                                            <t t-if="company.partner_id.country_id">
                                                <t t-esc="company.partner_id.country_id.name"/>
                                            </t>
                                        </div>
                                    </div>

                                </td>
                            </tr>

                            <tr>
                                <td style="border:1px solid #000; padding:10px; height:20mm; vertical-align:top;">
                                    <strong>Consignee (If To Order so indicate)</strong>

                                </td>
                            </tr>

                            <tr>
                                <td style="border:1px solid #000; padding:10px; height:20mm; vertical-align:top;">
                                    <strong>Notify Party (No claim shall attach for failure to notify)</strong>

                                </td>
                            </tr>
                        </table>

                        <table>
                            <tr>
                                <td style="width:50%; border:1px solid #000; padding:8px; height:12mm; vertical-align:top;">
                                    <strong>Vessel</strong>
                                </td>
                                <td style="width:25%; border:1px solid #000; padding:8px; height:12mm; vertical-align:top;">
                                    <strong>Port of Loading</strong>
                                </td>
                                <td style="width:25%; border:1px solid #000; padding:8px; height12mm; vertical-align:top;">
                                    <strong>Excess Value Declaration</strong>
                                </td>
                            </tr>
                        </table>
                        <table>
                            <tr>
                                <td style="width:25%; border:1px solid #000; padding:8px; height:10mm; vertical-align:top;">
                                    <strong>Port of Discharge</strong>
                                </td>
                                <td style="width:25%; border:1px solid #000; padding:8px; height:10mm; vertical-align:top;">
                                    <strong>Destination (if on-carriage)</strong>
                                </td>
                                <td style="width:25%; border:1px solid #000; padding:8px; height:10mm; vertical-align:top;">
                                    <strong>Freight payable at</strong>
                                </td>
                                <td style="width:25%; border:1px solid #000; padding:8px; height:10mm; vertical-align:top;">
                                    <strong>Number of Originals</strong>
                                </td>
                            </tr>
                        </table>
                        <div style="width:100%;display:block;font-size:12px;font-weight:bold;border-top:1px solid #000;padding-top:6px; white-space:nowrap;">

                            <span style="display:inline-block; width:20%;">Marks and numbers</span>
                            <span style="display:inline-block; width:45%;">Number and kind of packages, Description of
                                Goods.
                            </span>
                            <span style="display:inline-block; width:20%;">Gross Weight (Kgs.)</span>
                            <span style="display:inline-block; width:15%;">Measurement (M3)</span>
                        </div>

                        <div style="height:240px;"></div>

                        <div style="border-bottom:1px solid #000;padding-bottom:6px;font-size:12px;line-height:1.4;">

                            <div style="float:left; width:33%;">Consol Ref :</div>

                            <div style="float:right; width:33%; text-align:right; font-style:italic;">
                                Shipper Load and Count
                            </div>

                            <div style="clear:both;"></div>
                        </div>

                        <table style="width:100%; border-collapse:collapse; font-size:12px;">

                            <tr>
                                <td colspan="2" style="border:1px solid #000; padding:6px;height:25mm; vertical-align:top;">
                                    <strong>Bill of Lading must be surrendered to</strong>
                                </td>

                                <td rowspan="2"
                                    style="border-left:1px solid #000;border-right:1px solid #000;border-top:1px solid #000;border-bottom:1px solid #000;padding:6px;height:45mm;  vertical-align:top;">
                                    <strong>Freight Details, Charges, etc.</strong>
                                </td>
                            </tr>

                            <tr>
                                <td colspan="2" style="border:1px solid #000; padding:6px; height:25mm; vertical-align:top;">
                                    <strong>Place and Date of Issue</strong>
                                </td>
                            </tr>

                            <tr>
                                <td style="width:30%; border:1px solid #000; padding:6px; height:10mm; vertical-align:top;">
                                    <strong>Place of Receipt</strong>
                                </td>
                                <td style="width:30%; border:1px solid #000; padding:6px; height:10mm; vertical-align:top;">
                                    <strong>Place of Delivery</strong>
                                </td>
                                <td style="width:40%; border:1px solid #000; padding:6px; height:10mm; vertical-align:top;">
                                    <strong>Total No. of Packages (in words)</strong>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </main>
        </t>
    </template>
</odoo>