<odoo>

    <record id="view_organization_import_wizard" model="ir.ui.view">
        <field name="name">organization.import.wizard.form</field>
        <field name="model">organization.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Organization">
                <group>
                    <field name="file" filename="file_name"/>
                </group>
                <footer>
                    <button name="action_import"
                            type="object"
                            string="Import"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
