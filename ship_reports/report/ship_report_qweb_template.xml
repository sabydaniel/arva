<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="ship_report_qweb_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">

                <t t-if="docs">
                    <t t-set="wizard" t-value="docs[0]"/>
                </t>

                <div class="page">
                    <h2>Shipping Report</h2>

                    <t t-if="wizard">
                        <p>
                            <strong>From Date:</strong>
                            <t t-esc="wizard.from_date"/>
                            <br/>
                            <strong>To Date:</strong>
                            <t t-esc="wizard.to_date"/>
                        </p>

                        <t t-set="records"
                           t-value="env['quotation.list'].search([
                                ('date', '&gt;=', wizard.from_date),
                                ('date', '&lt;=', wizard.to_date)
                           ])"/>

                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Quote Number</th>
                                    <th>Date</th>
                                    <th>Client</th>
                                    <th>Origin</th>
                                    <th>Destination</th>
                                    <th>Profit / Loss</th>
                                </tr>
                            </thead>

                            <tbody>
                                <t t-foreach="records" t-as="q">
                                    <tr>
                                        <td><t t-esc="q.quote_number"/></td>
                                        <td><t t-esc="q.date"/></td>
                                        <td><t t-esc="q.client"/></td>
                                        <td><t t-esc="q.origin"/></td>
                                        <td><t t-esc="q.destination"/></td>
                                        <td><t t-esc="q.total_profit_loss"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>

                    <t t-if="not wizard">
                        <p>No data available.</p>
                    </t>

                </div>

            </t>
        </t>
    </template>

</odoo>
